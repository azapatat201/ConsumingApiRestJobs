<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/material_on_surface_stroke"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3F51B5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtIdJob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center|end"
                android:text="ID JOB"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="16sp"
                android:textStyle="italic" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00BCD4">

                <TextView
                    android:id="@+id/txtlabelPuesto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Puesto :"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/txtLabelCompania"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtLabelJobType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="Tipo de trabajo :"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/txtCategoria"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/txtLabelCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="Categoría :"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/txtLabelJobType"
                    app:layout_constraintTop_toBottomOf="@+id/txtCompania" />

                <TextView
                    android:id="@+id/txtPuesto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="16dp"
                    android:text="TextView"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintStart_toEndOf="@+id/txtlabelPuesto"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtCompania"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toEndOf="@+id/txtLabelCompania"
                    app:layout_constraintTop_toBottomOf="@+id/txtPuesto" />

                <TextView
                    android:id="@+id/txtCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toEndOf="@+id/txtLabelCategoria"
                    app:layout_constraintTop_toBottomOf="@+id/txtCompania" />

                <TextView
                    android:id="@+id/txtLabelCompania"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Compañia :"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/txtLabelCategoria"
                    app:layout_constraintTop_toBottomOf="@+id/txtPuesto" />

                <TextView
                    android:id="@+id/txtJobType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toEndOf="@+id/txtLabelJobType"
                    app:layout_constraintTop_toBottomOf="@+id/txtCategoria" />

                <Button
                    android:id="@+id/btVerDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Ver detalles"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtJobType" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>